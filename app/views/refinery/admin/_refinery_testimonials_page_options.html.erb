<!-- /refinerycms-testimonials/app/views/refinery/admin/_refinery_testimonials_page_options.html.erb -->
<div  id='page_testimonial_control'>

  <div class='field enable'>
    <span class='label_with_help'>
      <%= f.label :testimonials_show?, t('.testimonials_show') %>
      <%= refinery_help_tag t('.testimonials_show_help') %>
    </span>
    <%= f.check_box :testimonials_show, {}, true, false  %>
    <%= f.label :testimonials_show, t('.testimonials_show_label'), :class => 'stripped' %>
  </div>

  <div class='fields'>
    <div class='field'>
      <span class='label_with_help'> <%= f.label :testimonials_count, t('.testimonials_count')%>
        <%= refinery_help_tag t('.testimonials_count_help')%> </span>
      <%= f.number_field :testimonials_count  %>
    </div>

    <div class='field'>
      <span class='label_with_help'>
        <%= f.label :testimonials_select, t('.testimonials_select') %>
        <%= refinery_help_tag t('.testimonials_select_help') %>
      </span>
      <p>
        Select Testimonals By
      </p>
      <%= f.radio_button  :testimonials_select,  'Recent' %>
      <%= f.label :testimonials_select, 'By date (Recent first)', :value=> 'Recent', :class=>'stripped'%>
      <br />
      <%= f.radio_button  :testimonials_select,  'Random' %>
      <%= f.label :testimonials_select, 'Random', :value => 'Random', :class=>'stripped' %>
    </div>
  </div>
</div>

